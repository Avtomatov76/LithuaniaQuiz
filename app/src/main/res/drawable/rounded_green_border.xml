<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- The width and color of the border -->
    <stroke
        android:width="4dp"
        android:color="@color/greenBorder" />

    <!-- The inside color -->
    <solid
        android:color="@color/greenBorder" />

    <!-- The corner radius -->
    <corners android:radius="16dp" />

    <!-- Padding specs-->
    <padding
        android:left="20dp"
        android:top="10dp"
        android:right="20dp"
        android:bottom="10dp" >
    </padding>

</shape>