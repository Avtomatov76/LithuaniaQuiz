<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Quiz Name style specs -->

    <style name="QuizName">
        <item name="android:background">#424242</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:drawableBottom">@drawable/bokstas_two</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Bokstas ImageView style specs -->

    <style name="Bokstas">
        <item name="android:src">@drawable/bokstas_two</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Introduction style specs -->

    <style name="Introduction">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:singleLine">false</item>
    </style>


    <!-- Veliava ImageView style specs -->

    <style name="Veliava">
        <item name="android:src">@drawable/veliava</item>
        <item name="android:maxWidth">62dp</item>
        <item name="android:maxHeight">62dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Edit Text style specs -->

    <style name="EditText">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- "False" Radio Button bottom margin specs -->

    <style name="RadioButtonFalse">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- Last Checkbox bottom margin specs -->

    <style name="LastCheckbox">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- Question #1 cluster style specs -->

    <style name="LayoutOne">
        <item name="android:background">@drawable/rounded_yellow_border</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Question Title style specs -->

    <style name="QuestionTitle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- Question (itself) style specs -->

    <style name="Question">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

